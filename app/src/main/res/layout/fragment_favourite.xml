<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.ui.favourites.FavouriteFragment">

    <TextView
        android:textColor="@color/black"
        android:text="@string/favourite"
        android:id="@+id/txt"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CustomTabText"
        app:layout_constraintStart_toEndOf="@id/guideline2"
        android:layout_marginTop="22dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.96" />

    <EditText
        android:id="@+id/search_et"
        style="@style/HintEditText"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/back_search_ed"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:drawablePadding="8dp"
        android:drawableTint="@color/black"
        android:ems="10"
        android:hint="@string/search_by_author_and_name"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="@id/guideline3"
        app:layout_constraintStart_toEndOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/txt" />


    <CheckBox
        android:elevation="5dp"
        app:layout_constraintStart_toEndOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/search_et"
        android:id="@+id/notes"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_btn_compositors"
        android:button="@android:color/transparent"
        android:focusable="true"
        android:fontFamily="@font/montserrat_medium"
        android:paddingHorizontal="10dp"
        android:text="@string/notes"
        android:textAllCaps="false"
        android:textColor="@drawable/back_btn_compositors"
        android:textSize="12sp"
        />


    <CheckBox
        android:elevation="5dp"
        android:id="@+id/books"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_btn_compositors"
        android:button="@android:color/transparent"
        android:fontFamily="@font/montserrat_medium"
        android:paddingHorizontal="10dp"
        android:text="@string/books"
        android:textAllCaps="false"
        android:textColor="@drawable/back_btn_compositors"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/notes"
        app:layout_constraintTop_toBottomOf="@id/search_et" />


    <CheckBox
        android:elevation="5dp"
        android:id="@+id/vocal"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_btn_compositors"
        android:button="@android:color/transparent"
        android:fontFamily="@font/montserrat_medium"
        android:paddingHorizontal="10dp"
        android:text="@string/vocals"
        android:textAllCaps="false"
        android:textColor="@drawable/back_btn_compositors"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/books"
        app:layout_constraintTop_toBottomOf="@id/search_et" />

    <TextView
        android:textSize="12dp"
        android:id="@+id/classes"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/classes"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toEndOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <CheckBox
        android:elevation="5dp"
        android:id="@+id/one"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_back_btn"
        android:button="@android:color/transparent"
        android:fontFamily="@font/montserrat_medium"
        android:paddingHorizontal="10dp"
        android:text="1"
        android:textAllCaps="false"
        android:textColor="@drawable/back_btn_compositors"
        app:layout_constraintStart_toEndOf="@id/classes"
        app:layout_constraintTop_toBottomOf="@id/notes" />
    <CheckBox
        android:elevation="5dp"
        android:id="@+id/two"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_back_btn"
        android:button="@android:color/transparent"
        android:fontFamily="@font/montserrat_medium"
        android:paddingHorizontal="9dp"
        android:text="2"
        android:textAllCaps="false"
        android:textColor="@drawable/back_btn_compositors"
        app:layout_constraintStart_toEndOf="@id/one"
        app:layout_constraintTop_toBottomOf="@id/notes" />
    <CheckBox
        android:elevation="5dp"
        android:id="@+id/three"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_back_btn"
        android:button="@android:color/transparent"
        android:fontFamily="@font/montserrat_medium"
        android:paddingHorizontal="9dp"
        android:text="3"
        android:textAllCaps="false"
        android:textColor="@drawable/back_btn_compositors"
        app:layout_constraintStart_toEndOf="@id/two"
        app:layout_constraintTop_toBottomOf="@id/notes" />
    <CheckBox
        android:elevation="5dp"
        android:id="@+id/four"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_back_btn"
        android:button="@android:color/transparent"
        android:fontFamily="@font/montserrat_medium"
        android:paddingHorizontal="9dp"
        android:text="4"
        android:textAllCaps="false"
        android:textColor="@drawable/back_btn_compositors"
        app:layout_constraintStart_toEndOf="@id/three"
        app:layout_constraintTop_toBottomOf="@id/notes" />
    <CheckBox
        android:elevation="5dp"
        android:id="@+id/five"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_back_btn"
        android:button="@android:color/transparent"
        android:fontFamily="@font/montserrat_medium"
        android:paddingHorizontal="9dp"
        android:text="5"
        android:textAllCaps="false"
        android:textColor="@drawable/back_btn_compositors"
        app:layout_constraintStart_toEndOf="@id/four"
        app:layout_constraintTop_toBottomOf="@id/notes" />

    <CheckBox
        android:elevation="5dp"
        android:id="@+id/six"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_back_btn"
        android:button="@android:color/transparent"
        android:fontFamily="@font/montserrat_medium"
        android:paddingHorizontal="1.5dp"
        android:text="6-7"
        android:textAllCaps="false"
        android:textColor="@drawable/back_btn_compositors"
        app:layout_constraintStart_toEndOf="@id/five"
        app:layout_constraintTop_toBottomOf="@id/notes" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline3"
        app:layout_constraintStart_toEndOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/classes"
        app:layout_constraintVertical_bias="0" />

    <ProgressBar
        android:id="@+id/paginationProgressBar"
        style="?attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>